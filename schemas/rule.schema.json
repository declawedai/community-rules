{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://declawed.ai/schemas/rule.schema.json",
  "title": "Declawed Detection Rule",
  "description": "Standardized schema for community detection rules used by Declawed.ai",
  "type": "object",
  "required": ["id", "name", "description", "tags", "severity", "confidence", "enabled", "detection"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique rule identifier (lowercase, hyphens only)"
    },
    "name": {
      "type": "string",
      "maxLength": 100,
      "description": "Human-readable rule name"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what this rule detects and why it matters"
    },
    "author": {
      "type": "string",
      "description": "Rule author (name or GitHub username)"
    },
    "references": {
      "type": "array",
      "items": { "type": "string", "format": "uri" },
      "description": "URLs to relevant research papers, MITRE ATT&CK, or documentation"
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "prompt-injection",
          "jailbreak",
          "data-exfil",
          "credential-stealer",
          "crypto-stealer",
          "tool-poison",
          "hidden-text",
          "obfuscation",
          "refusal-trigger",
          "binary-executable"
        ]
      },
      "description": "Detection categories (at least one required)"
    },
    "severity": {
      "type": "string",
      "enum": ["critical", "error", "warning", "info"],
      "description": "Severity level: critical (immediate threat), error (high risk), warning (suspicious), info (informational)"
    },
    "confidence": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "Confidence score 0-100. Higher = more certain this indicates malicious intent"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether this rule is enabled by default"
    },
    "detection": {
      "type": "object",
      "required": ["patterns", "condition"],
      "description": "Detection logic configuration",
      "properties": {
        "patterns": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "oneOf": [
              {
                "required": ["regex"],
                "properties": {
                  "regex": {
                    "type": "string",
                    "description": "Regular expression pattern"
                  },
                  "flags": {
                    "type": "string",
                    "default": "gi",
                    "description": "Regex flags: g=global, i=case-insensitive, m=multiline, s=dotall"
                  },
                  "description": {
                    "type": "string",
                    "description": "What this specific pattern detects"
                  }
                }
              },
              {
                "required": ["literal"],
                "properties": {
                  "literal": {
                    "type": "string",
                    "description": "Exact string to match (case-insensitive)"
                  },
                  "description": {
                    "type": "string",
                    "description": "What this specific pattern detects"
                  }
                }
              }
            ]
          },
          "description": "List of patterns to match (regex or literal strings)"
        },
        "condition": {
          "type": "string",
          "enum": ["any", "all"],
          "description": "'any' = match if any pattern matches, 'all' = match only if all patterns match"
        }
      }
    },
    "false_positives": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Known scenarios that may trigger false positives"
    },
    "test_cases": {
      "type": "object",
      "description": "Test cases used in CI validation",
      "properties": {
        "should_match": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Strings that MUST trigger this rule"
        },
        "should_not_match": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Strings that must NOT trigger this rule"
        }
      }
    }
  },
  "additionalProperties": false
}
